extends ../layout

block content
  h1= title

  .login-form
    form(action="/login", method="post")
      input(type='hidden', name='_csrf', value=_csrf)
      div
        label Username:
        input(type="text", name="email")
      div
        label Password:
        input(type="password", name="password")
      div
        input(type="submit", value="Log In")
